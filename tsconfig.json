{
	"compilerOptions": {
		"types": ["jest", "vite/client"],
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": "./src",
		"paths": {
			"assets/*": ["/assets/*"],
			"@application/*": ["modules/ChuggernautsHockey/application/*"],
			"@domain/*": ["modules/ChuggernautsHockey/domain/*"],
			"@infrastructure/*": ["modules/ChuggernautsHockey/infrastructure/*"],
			"@presentation/*": ["modules/ChuggernautsHockey/presentation/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "./src/*"],
	"exclude": ["/node_modules/"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
